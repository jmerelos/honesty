<%= render 'shared/page_title', title: "Edit Author" %>

<%= render 'shared/errors', obj: @author %>
<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for @author do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.submit "Edit Author", class: "btn btn-success" %>
		<% end %>	
	</div>
</div>
